//-
	@file Defines the default page template

//- Template dependencies
include ../../molecules/_browser_warning/_browser_warning
include ../../organisms/_main_header/_main_header

//- Default vars
- var page = {id: "page_default", title: "Default Boilerplate Page"};


//- Import variables from calling page
block page_vars

//- Build body class
- var bodyClass = "page-"+page.id

doctype html
!= "<!--[if IE 9]> <html class=\"ie9\"> <![endif]-->"
!= "<!--[if gt IE 9]><!-->"
html
!= "<!--<![endif]-->"
	head
		title #{page.title}
		meta(charset="utf-8")
		meta(name="description", content=page.description)
		meta(name="viewport", content="width=device-width")
		meta(name="format-detection", content="telephone=no")
		if (env == "dev")
			link(rel="stylesheet", href="/css/main.css")
		else
			link(rel="stylesheet", href="/css/main.css")

		link(href="http://fonts.googleapis.com/css?family=Libre+Baskerville:400italic", rel="stylesheet", type="text/css")

	body(class=bodyClass)

		<!--[if lt IE 9]>
		+browser_warning()
		<![endif]-->

		+main_header(page.section)

		.main-content
			.main-content-inner
				block content

		if (env == "dev")
			script(data-main="/js/main", src="/js/vendor/require.js")
		else
			script(src="/js/itsravenous-website.min.js")
