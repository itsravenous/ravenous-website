//-
	@file Defines the default page template

//- Template dependencies
include ../../organisms/_main_header/_main_header

//- Default vars
- var page = {id: "page_default", title: "Default Boilerplate Page"};


//- Import variables from calling page
block page_vars

//- Build body class
- var bodyClass = "page-"+page.id

doctype html
//if IE 9
	<html class="ie9">
// [if gt IE 9] <!
html(lang="en")
	// <![endif]
	head
		title #{page.title}
		meta(charset="utf-8")
		meta(name="description", content=page.description)
		meta(name="viewport", content="width=device-width")
		meta(name="format-detection", content="telephone=no")
		if (env == "dev")
			link(rel="stylesheet", href="/css/main.css")
		else
			link(rel="stylesheet", href="/css/main.css")

		link(href="http://fonts.googleapis.com/css?family=Libre+Baskerville:400italic", rel="stylesheet", type="text/css")

		// if lt IE 9
			script(src="/js/ie/eventlistener.js")
			script(src="/js/ie/selectivizr-min.js")
			script(src="/js/ie/respond.min.js")

	body(class=bodyClass)

		+main_header(page.section)

		.main-content
			.main-content-inner
				block content

		if (env == "dev")
			script(data-main="/js/main", src="/js/vendor/require.js")
		else
			script(src="/js/itsravenous-website.min.js")
